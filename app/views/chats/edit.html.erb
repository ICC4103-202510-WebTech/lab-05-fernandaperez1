<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-warning text-dark">
      <h2 class="mb-0"><i class="fas fa-edit"></i> Editar Chat</h2>
    </div>

    <div class="card-body">
      <%= form_with model: @chat, local: true do |f| %>
        <% if @chat.errors.any? %>
          <div class="alert alert-danger">
            <h5>Se encontraron errores:</h5>
            <ul>
              <% @chat.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= f.label :sender_id, "ID del Remitente", class: "form-label" %>
          <%= f.number_field :sender_id, class: "form-control" %>
        </div>

        <div class="mb-3">
          <%= f.label :receiver_id, "ID del Receptor", class: "form-label" %>
          <%= f.number_field :receiver_id, class: "form-control" %>
        </div>

        <div class="d-flex justify-content-between">
          <%= f.submit "Actualizar Chat", class: "btn btn-warning" %>
          <%= link_to "Cancelar", chat_path(@chat), class: "btn btn-outline-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
