<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-primary text-white">
      <h2 class="mb-0"><i class="fas fa-comment-dots"></i> Detalles del Chat</h2>
    </div>
    <div class="card-body">
      <p class="mb-2">
        <strong>Chat ID:</strong> <%= @chat.id %>
      </p>
      <p class="mb-2">
        <strong>Sender:</strong> <%= @chat.sender.first_name %> <%= @chat.sender.last_name %> (ID: <%= @chat.sender_id %>)
      </p>
      <p class="mb-2">
        <strong>Receiver:</strong> <%= @chat.receiver.first_name %> <%= @chat.receiver.last_name %> (ID: <%= @chat.receiver_id %>)
      </p>

      <%= link_to edit_chat_path(@chat), class: 'btn btn-warning me-2' do %>
        <i class="fas fa-edit"></i> Editar Chat
      <% end %>

      <%= link_to chats_path, class: 'btn btn-outline-secondary' do %>
        <i class="fas fa-arrow-left"></i> Volver a Chats
      <% end %>
    </div>
  </div>

  <div class="mt-4">
    <h3><i class="fas fa-comments"></i> Mensajes</h3>
    <% if @chat.messages.any? %>
      <ul class="list-group">
        <% @chat.messages.each do |msg| %>
          <li class="list-group-item">
            <strong><%= msg.sender.first_name %> <%= msg.sender.last_name %>:</strong> <%= msg.body %>
          </li>
        <% end %>
      </ul>
    <% else %>
      <p class="text-muted">No hay mensajes en este chat.</p>
    <% end %>
  </div>

  <div class="mt-4">
    <%= link_to "Agregar nuevo Chat", new_chat_path, class: "btn btn-primary" %>
  </div>
</div>
