<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5"><i class="fas fa-envelope"></i> Mensajes</h1>
    <%= link_to 'Nuevo Mensaje', new_message_path, class: 'btn btn-primary' %>
  </div>

  <div class="table-responsive">
    <table class="table table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Usuario</th>
          <th scope="col">Chat</th>
          <th scope="col">Mensaje</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @messages.each do |message| %>
          <tr>
            <td><%= message.id %></td>
            <td>
              <% if message.sender.present? %>
                <%= message.sender.first_name %> <%= message.sender.last_name %>
              <% else %>
                Remitente desconocido
              <% end %>
            </td>
            <td><%= message.chat&.id || "Sin chat" %></td>
            <td><%= truncate(message.body, length: 60) %></td>
            <td>
              <% if can? :read, message %>
                <%= link_to message_path(message), class: 'btn btn-outline-primary btn-sm me-1' do %>
                  <i class="fas fa-eye"></i> Ver
                <% end %>
              <% end %>

              <% if can? :edit, message %>
                <%= link_to edit_message_path(message), class: 'btn btn-outline-secondary btn-sm me-1' do %>
                  <i class="fas fa-edit"></i> Editar
                <% end %>
              <% end %>

              <% if can? :destroy, message %>
                <%= link_to message_path(message),
                            method: :delete,
                            data: { confirm: "¿Estás seguro?" },
                            class: 'btn btn-outline-danger btn-sm' do %>
                  <i class="fas fa-trash-alt"></i> Eliminar
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
