<div class="container mt-5">
  <div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="display-5"><i class="fas fa-users me-2"></i>Usuarios</h1>
    <%= link_to "Agregar Usuario", new_user_path, class: "btn btn-primary" %>
  </div>

  <div class="table-responsive">
    <table class="table table-hover align-middle">
      <thead class="table-dark">
        <tr>
          <th scope="col">ID</th>
          <th scope="col">Nombre</th>
          <th scope="col">Apellido</th>
          <th scope="col">Correo</th>
          <th scope="col">Mensajes</th>
          <th scope="col">Acciones</th>
        </tr>
      </thead>
      <tbody>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td><%= user.first_name %></td>
            <td><%= user.last_name %></td>
            <td><%= mail_to user.email %></td>
            <td><%= pluralize(user.messages.count, "mensaje") %></td>
            <td>
            <div class="d-flex flex-row flex-nowrap gap-2">
              <% if can?(:read, user) %>
                <%= link_to user_path(user), class: 'btn btn-outline-primary btn-sm mt-2' do %>
                  <i class="fas fa-eye"></i> Ver
                <% end %>
              <% end %>
              <% if can?(:edit, user) %>
                <%= link_to edit_user_path(user), class: 'btn btn-outline-secondary btn-sm mt-2' do %>
                  <i class="fas fa-edit"></i> Editar
                <% end %>
              <% end %>
              <% if can?(:destroy, user) && current_user != user %>
                <%= button_to user_path(user), method: :delete, data: { confirm: "¿Estás segura de que quieres eliminar a este usuario?" }, class: 'btn btn-outline-danger btn-sm mt-2' do %>
                  <i class="fas fa-trash-alt"></i> Eliminar
                <% end %>
              <% end %>
            </div>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
