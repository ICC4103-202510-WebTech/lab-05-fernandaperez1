<div class="container mt-5">
  <div class="card shadow-sm">
    <div class="card-header bg-success text-white">
      <h2 class="mb-0"><i class="fas fa-user"></i> Detalles del Usuario</h2>
    </div>
    <div class="card-body">
      <p class="mb-2">
        <strong>ID del Usuario:</strong> <%= @user.id %>
      </p>
      <p class="mb-2">
        <strong>Nombre:</strong> <%= @user.first_name %>
      </p>
      <p class="mb-2">
        <strong>Apellido:</strong> <%= @user.last_name %>
      </p>
      <p class="mb-2">
        <strong>Correo Electr√≥nico:</strong> <%= mail_to @user.email %>
      </p>

      <%= link_to users_path, class: 'btn btn-outline-secondary mt-3' do %>
        <i class="fas fa-arrow-left"></i> Volver a Usuarios
      <% end %>
    </div>
  </div>
</div>
