<div class="container mt-5">
  <h2>Editar Usuario</h2>

  <%= form_with model: @user, local: true do |f| %>
    <% if @user.errors.any? %>
      <div class="alert alert-danger">
        <h4>Se encontraron errores:</h4>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="mb-3">
      <%= f.label :first_name, "Nombre", class: "form-label" %>
      <%= f.text_field :first_name, class: "form-control", autofocus: true %>
    </div>

    <div class="mb-3">
      <%= f.label :last_name, "Apellido", class: "form-label" %>
      <%= f.text_field :last_name, class: "form-control" %>
    </div>

    <div class="mb-3">
      <%= f.label :email, "Correo ElectrÃ³nico", class: "form-label" %>
      <%= f.email_field :email, class: "form-control" %>
    </div>

    <%= f.submit "Actualizar Usuario", class: "btn btn-primary" %>
    <%= link_to "Cancelar", user_path(@user), class: "btn btn-secondary ms-2" %>
  <% end %>
</div>
